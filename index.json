{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "trailingComma": "none",
  "tabWidth": 4,
  "semi": false,
  "useTabs": true,
  "singleQuote": true,
  "endOfLine": "lf",

  "overrides": [
    {
      "files": ["*.csv", "*.json", "*.md", "*.toml", "*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "useTabs": false
      }
  ]
}
